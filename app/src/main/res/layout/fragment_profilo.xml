<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/immagineProfilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="25dp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="54dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/nomeProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/nome_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/nomeProfiloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nomeTextProfiloEdit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:boxBackgroundMode="outline"
                app:errorEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                android:visibility="gone"
                app:errorIconTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/ResidenzaRegister"
                app:layout_constraintEnd_toEndOf="@+id/CognomeRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/CognomeRegister"
                app:layout_constraintTop_toBottomOf="@+id/CognomeRegister">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:text="@string/default_description"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cognomeProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/cognome_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cognomeProfiloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cognomeTextProfiloEdit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:boxBackgroundMode="outline"
                app:errorEnabled="true"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:errorIconTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/ResidenzaRegister"
                app:layout_constraintEnd_toEndOf="@+id/CognomeRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/CognomeRegister"
                app:layout_constraintTop_toBottomOf="@+id/CognomeRegister">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:text="@string/default_description"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/email_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/emailProfiloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/password_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/passwordProfiloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextProfiloEdit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:boxBackgroundMode="outline"
                app:errorEnabled="true"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:errorIconTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/ResidenzaRegister"
                app:layout_constraintEnd_toEndOf="@+id/CognomeRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/CognomeRegister"
                app:layout_constraintTop_toBottomOf="@+id/CognomeRegister">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="@string/default_description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </com.google.android.material.textfield.TextInputLayout>
            <Switch
                android:id="@+id/mostraPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sessoProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/sesso_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/sesso_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/SessoTextProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_description"
                android:padding="25dp"
                android:textSize="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/residenzaProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/residenza_profilo" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/residenzaProfiloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/residenzaProfiloEdit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:boxBackgroundMode="outline"
                app:errorEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:errorIconTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/ResidenzaRegister"
                app:layout_constraintEnd_toEndOf="@+id/CognomeRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/CognomeRegister"
                app:layout_constraintTop_toBottomOf="@+id/CognomeRegister">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:text="@string/default_description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataNascitaProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/data_di_nascita_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/ModificaDataProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:text="@string/modifica_data_button"/>

            <TextView
                android:id="@+id/dataNascitaTextProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="0000-00-00"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numeroDiTelefonoProfilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/telefono_profilo" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/telefonoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/default_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/telefonoEdit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:boxBackgroundMode="outline"
                app:errorEnabled="true"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorIconTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/ResidenzaRegister"
                app:layout_constraintEnd_toEndOf="@+id/CognomeRegister"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/CognomeRegister"
                app:layout_constraintTop_toBottomOf="@+id/CognomeRegister">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:text="@string/default_phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonModificaProfilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modifica_profilo"
            android:layout_gravity="center"
            android:layout_marginVertical="75dp"/>
    </LinearLayout>
</ScrollView>