<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ProgressBar
        android:id="@+id/wizard_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:progressDrawable="@drawable/progress_bar_advancing"
        android:max="100"
        android:min="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            app:srcCompat="@drawable/left_arrow_icon" />

        <ImageButton
            android:id="@+id/forward_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            app:srcCompat="@drawable/right_arrow_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/domanda_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domanda"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"/>

    <RadioGroup
        android:id="@+id/risposte_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RadioButton
            android:id="@+id/risposta_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risposta_a" />

        <RadioButton
            android:id="@+id/risposta_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risposta_b" />

        <RadioButton
            android:id="@+id/risposta_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risposta_c" />

        <RadioButton
            android:id="@+id/risposta_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risposta_d" />

    </RadioGroup>

</LinearLayout>